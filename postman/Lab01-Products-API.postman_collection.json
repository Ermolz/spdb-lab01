{
  "info": {
    "name": "Lab01 Products API",
    "description": "CRUD endpoints for /api/products with Postman automated tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "productId", "value": "" }
  ],
  "item": [
    {
      "name": "Get all products",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/products"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Response is array', function () {",
              "    const body = pm.response.json();",
              "    pm.expect(body).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Postman Test Product\",\n  \"price\": 99.99\n}"
        },
        "url": "{{baseUrl}}/api/products"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 201', function () { pm.response.to.have.status(201); });",
              "pm.test('Response has id, name, price', function () {",
              "    const body = pm.response.json();",
              "    pm.expect(body).to.have.property('id');",
              "    pm.expect(body).to.have.property('name', 'Postman Test Product');",
              "    pm.expect(body).to.have.property('price', 99.99);",
              "});",
              "const json = pm.response.json();",
              "if (json.id) { pm.collectionVariables.set('productId', json.id); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get product by id",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/products/{{productId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Response has correct id', function () {",
              "    const body = pm.response.json();",
              "    pm.expect(body.id).to.eql(parseInt(pm.collectionVariables.get('productId'), 10));",
              "    pm.expect(body.name).to.eql('Postman Test Product');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Update product",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Postman Updated Product\",\n  \"price\": 49.50\n}"
        },
        "url": "{{baseUrl}}/api/products/{{productId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Response has updated name and price', function () {",
              "    const body = pm.response.json();",
              "    pm.expect(body.name).to.eql('Postman Updated Product');",
              "    pm.expect(body.price).to.eql(49.5);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get product by id (after update)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/products/{{productId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Product is updated', function () {",
              "    const body = pm.response.json();",
              "    pm.expect(body.name).to.eql('Postman Updated Product');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete product",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": "{{baseUrl}}/api/products/{{productId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 204', function () { pm.response.to.have.status(204); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get product by id (expect 404)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/products/{{productId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 404 Not Found', function () { pm.response.to.have.status(404); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
